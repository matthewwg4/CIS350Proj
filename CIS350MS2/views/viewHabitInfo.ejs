<form action='/addTag/<%= username %>/<%= habit.habitName %>' method='post'>
    New tag:  <input name="newTag">
    <input type=submit value='Update'>
</form>

<form action='/deleteHabit/<%= username %>/<%= habit.habitName %>' method='post'>
    <input type='submit' value='Delete Habit'>
</form>
