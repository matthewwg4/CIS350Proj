<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.habittracker.login"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.habittracker.habits.HabitsActivity"
            android:label="Habits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.habits.AddHabitsActivity"
            android:label="Add Habits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.habits.CurrentHabitsActivity"
            android:label="Current Habits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.habits.PastHabitsActivity"
            android:label="Past Habits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.habits.AddExistingHabitActivity"
            android:label="Add Existing Habit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.habits.CreateNewHabitActivity"
            android:label="Create New Habits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.surveys.CustomSurveyActivity"
            android:label="@string/title_activity_custom_survey"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.surveys.SurveyActivity"
            android:label="@string/title_activity_survey"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.resources.ResourcesSearchResultActivity"
            android:label="@string/title_activity_resources_search_result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.resources.CustomResourceActivity"
            android:label="@string/title_activity_custom_resource"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.resources.ResourcesActivity"
            android:label="@string/title_activity_resources"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.menu.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.visualization.TrendViewerActivity"
            android:label="TrendViewer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.habittracker.login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.habittracker.login.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>